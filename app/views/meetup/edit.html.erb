<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h1>Edit Meetup</h1>

      <%= form_with model: @meetup, url: update_meetup_path(@meetup), method: :patch do |form| %>

        <div class="form-group mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %> 
        </div>

        <div class="form-group mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-control" %> 
        </div>

        <div class="form-group mb-3">
          <%= form.label :location, class: "form-label" %>
          <%= form.text_field :location, class: "form-control" %> 
        </div>

        <div class="form-group mb-3">
          <%= form.label :datetime, class: "form-label" %>
          <%= form.datetime_field :datetime, class: "form-control" %> 
        </div>

        <div class="mb-3">
          <%= form.submit "Update Meetup", class: "btn btn-primary" %>
        </div>

      <% end %>

      <h2>Participants</h2>

      <% if @meetup.participants.any? %>
        <ul class="list-group">
            <% @meetup.participants.each do |participant| %>
            <li class="list-group-item"><%= participant.email %></li> 
            <% end %>
        </ul>
    
      <% else %>
        <p>No participants yet.</p>
      <% end %>

    </div>
  </div>
</div>
